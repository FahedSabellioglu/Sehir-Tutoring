
@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using PagedList;
@using PagedList.Mvc;


@model IPagedList<CoursesList_Result>


<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content d-md-flex justify-content-between align-items-center">
                <div class="mb-3 mb-md-0">
                    <h2>@ViewBag.name</h2>
                    <p>@ViewBag.desc</p>
                </div>
                <div class="page_link">
                    <a href="/Home/Main">Home</a>
                    <a href="/@ViewBag.C_name/Index">@ViewBag.name</a>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="cat_product_area section_gap">
    <div class="container">
        <div class="row flex-row-reverse">

            <div class="col-lg-9">
                <div class="product_top_bar">
                    <div class="left_dorp">
                        <select class="sorting" style="display: none;">
                            <option value="1">ascending</option>
                            <option value="2">Descending</option>
                        </select>
                        <div class="nice-select sorting" tabindex="0">
                            <span class="current">No Sorting</span>
                            <ul class="list">
                                <li data-value="2" class="option focus">ascending</li>
                                <li data-value="4" class="option selected">Descending</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="latest_product_inner">
                    <div class="row">
                        @foreach (CoursesList_Result K in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    <div class="product-img">
                                        <img class="card-img" src="~/Content/eiser/img/product/inspired-product/i2.jpg" alt="">
                                        <div class="p_icon">
                                            <a href="@Url.Action("Details","Courses",new { ID=K.ID, C_Code=K.C_Code, C_Name=K.C_Name,descrip=K.descrip,Price=K.Price})">
                                                <i class="ti-eye"></i>
                                            </a>
                                            @if (Request.Url.ToString()[Request.Url.ToString().Length - 1] != 'x')
                                            {
                                                <a class="delete_item" data-code="@K.C_Code" data-name="@K.C_Name" data-usid="@K.ID" data-toggle="modal" data-target="#exampleModal">
                                                    <i class="ti-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                    <div class="product-btm">
                                        <a href="/Courses/Details/1" class="d-block">
                                            <h4>@K.C_Name</h4>
                                        </a>
                                        <div class="mt-3">
                                            <span class="mr-4">$25.00</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>



                    <nav>
                        @Html.PagedListPager(Model, page => Url.Action(ViewBag.A_name, ViewBag.C_name, new { page }), new PagedListRenderOptions
                        {

                        ContainerDivClasses = new[] { "" },
                        UlElementClasses = new[] { "pagination", "justify-content-center" },
                        LiElementClasses = new[] { "page-item", "page-link" }


                        }
                            )

                    </nav>

                </div>

                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="popup">
                                ...
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary No-button" data-dismiss="modal" id="no1">No</button>
                                <button type="button" class="btn btn-success Yes-button" id="YES">Yes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-lg-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Name</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                @foreach (string CourseName in ViewBag.CNames)
                                {
                                    <li>
                                        <a href="#">@CourseName</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </aside>

                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Depertment</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                @foreach (string d_name in ViewBag.Dep)
                                {
                                    <li>
                                        <a href="#">@d_name</a>
                                    </li>

                                }
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="~/Content/eiser/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/eiser/js/bootstrap.min.js"></script>
    <script src="~/Content/eiser/js/Deletion.js"></script>
    <script src="~/Content/eiser/js/DeletionAjax.js" data-link="/Courses/Delete" data-to="/Courses/Index" id="d_ajax"></script>
   

}







