<!DOCTYPE HTML>
<html lang="zxx">

<head>
    <title>Sehir Tutoring</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" content="Triple Forms Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }

/**/</script>
    <link href="~/Content/eiser/css/bootstrap.css" rel="stylesheet" />
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <link rel="stylesheet" href="/Content/web/css/style.css" type="text/css" media="all" />
    <!-- Style-CSS -->
    <link href="/Content/web/css/font-awesome.min.css" rel="stylesheet">
    <!-- Font-Awesome-Icons-CSS -->
    <!-- //css files -->
    <!-- web-fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext"
          rel="stylesheet">
    <!-- //web-fonts -->
</head>

<body>
    <div class="main-bg">
        <!-- title -->
        <h1>Welcome to sehir tutoring</h1>
        <!-- //title -->
        <div class="sub-main-w3">
            <div class="image-style">

            </div>
            <!-- vertical tabs -->
            <div class="vertical-tab">
                <div id="section1" class="section-w3ls">
                    <input type="radio" name="sections" id="option1" checked>
                    <label for="option1" class="icon-left-w3pvt"><span class="fa fa-user-circle" aria-hidden="true"></span>Login</label>
                    <article>
                        <form action="/Login/login" method="post">

                            <h3 class="legend">Login Here</h3>
                            <div class="input">
                                <span class="fa fa-envelope-o" aria-hidden="true"></span>
                                <input type="email" placeholder="Email" name="mail" required />
                            </div>
                            <div class="input">
                                <span class="fa fa-key" aria-hidden="true"></span>
                                <input type="password" placeholder="Passwored" name="pass" required />
                            </div>
                            <button type="submit" class="btn submit">Login</button>
                            <a href="#" class="bottom-text-w3ls forget" style="visibility:hidden;">Forgot Password?</a>
                        </form>
                    </article>
                </div>
                <div id="section2" class="section-w3ls section-w3ls_req">
                    <input type="radio" name="sections" id="option2">
                    <label for="option2" class="icon-left-w3pvt"><span class="fa fa-pencil-square" aria-hidden="true"></span>Register</label>
                    <article>
                        <form action="/Login/Register" method="post">
                            <div class="row special_form">
                                <h3 class="legend col-md-12">Register Here</h3>
                                <div class="col-md-4" style="padding-left:0px;padding-right:0px">
                                    <div class="input column_special">
                                        <span class="fa fa-user" aria-hidden="true"></span>
                                        <input type="text" placeholder="Name" oninput="IdCheck(this)" name="U_name" required />
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-user" aria-hidden="true"></span>
                                        <input type="text" placeholder="Surname" oninput="IdCheck(this)" name="U_Surname" required />
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-id-card" aria-hidden="true"></span>
                                        <input type="number" id="stdId" oninput="IdCheck(this)" placeholder="Student ID" name="id" required />

                                    </div>
                                </div>

                                <div class="col-md-3" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-university" aria-hidden="true"></span>
                                        <input type="text" placeholder="Dept" id="dept" oninput="IdCheck(this)" name="dept" required />
                                    </div>
                                </div>
                                <div class="col-md-3" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-calendar" aria-hidden="true"></span>
                                        <input type="number" placeholder="Enrolment Year" name="enr_year" required min="2010" max="2020">
                                    </div>
                                </div>
                                <div class="col-md-6" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-envelope-o" aria-hidden="true"></span>
                                        <input type="email" placeholder="Email" name="mail" required />
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-key" aria-hidden="true"></span>
                                        <input type="password" id="ps1" placeholder="Password" name="pass" required />
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-key" aria-hidden="true"></span>
                                        <input type="password" id="ps2" placeholder="Repeat password" oninput="IdCheck(this);" name="password2" required />
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-left:0px;padding-right:0px">
                                    <div class="input">
                                        <span class="fa fa-image" aria-hidden="true"></span>
                                        <input style="cursor:pointer;" type="button" name="load" value="Upload img(op)" onclick="document.getElementById('imgFile').click()" />
                                        <input type="file" style="display:none;" name="img" id="imgFile" placeholder="Upload img" />
                                    </div>
                                </div>
                                <button type="submit" class="btn submit ">Register</button>


                            </div>
                        </form>
                    </article>
                </div>
                <div id="section3" class="section-w3ls">
                    <input type="radio" name="sections" id="option3">
                    <label for="option3" class="icon-left-w3pvt"><span class="fa fa-lock" aria-hidden="true"></span>Forgot Password?</label>
                    <article>
                        <form action="/Login/ForgotPassword" method="post">
                            <h3 class="legend last">Reset Password</h3>
                            <p class="para-style">Enter your email address below and we'll send you an email with instructions.</p>
                            <p class="para-style-2">
                                <strong>Need Help?</strong> Learn more about how to <a href="#">
                                    retrieve an existing
                                    account.
                                </a>
                            </p>
                            <div class="input">
                                <span class="fa fa-envelope-o" aria-hidden="true"></span>
                                <input type="email" placeholder="Email" name="mail" required />
                            </div>
                            <button type="submit" class="btn submit last-btn">Reset</button>
                        </form>
                    </article>
                </div>
            </div>
            <!-- //vertical tabs -->
            <div class="clear"></div>
        </div>
        <!-- copyright -->

    </div>


    <div class="modal" tabindex="-1" role="dialog" id="notice">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Notice</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="text"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/eiser/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/eiser/js/bootstrap.min.js"></script>
    @{
        if (ViewBag.message != null)
        {
            <script>
            document.getElementById("text").innerHTML = '@ViewBag.message'
            $("#notice").modal("show");
            </script>

            ViewBag.message = null;
        }
    }
    <script src="~/Content/eiser/js/Control.js"></script>




</body>


</html>




